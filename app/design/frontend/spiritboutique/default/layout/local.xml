<?xml version="1.0" encoding="UTF-8"?>
<layout>
	<default>
		<reference name="head">
			 <action method="addLinkRel"><rel>stylesheet</rel><href>//fonts.googleapis.com/css?family=Old+Standard+TT:400,400italic,700</href></action>
		</reference>
		<!-- HOMEPAGE REFERENCES -->
			<!-- top left -->
			<reference name="root">
				<block type="core/text_list" name="top-left" as="top-left" translate="label">
					<label>Top Left</label>
				</block>
			</reference>
			<reference name="top-left">
				<block type="core/template" name="top-left-block" template="homepage/top_left.phtml" />
			</reference>
			
			<!-- top right -->
			<reference name="root">
				<block type="core/text_list" name="top-right" as="top-right" translate="label">
					<label>Top Right</label>
				</block>
			</reference>
			<reference name="top-right">
				<block type="core/template" name="top-right-block" template="homepage/top_right.phtml" />
			</reference>
			
			<!-- mid container -->
			<reference name="root">
				<block type="core/text_list" name="mid-container" as="mid-container" translate="label">
					<label>Mid Container</label>
				</block>
			</reference>
			<reference name="mid-container">
				<block type="core/template" name="mid-container-block" template="homepage/mid_container.phtml" />
			</reference>
			
			<!-- bottom left -->
			<reference name="root">
				<block type="core/text_list" name="bottom-left" as="bottom-left" translate="label">
					<label>Bottom Left</label>
				</block>
			</reference>
			<reference name="bottom-left">
				<block type="core/template" name="bottom-left-block" template="homepage/bottom_left.phtml" />
			</reference>
			
			<!-- bottom right -->
			<reference name="root">
				<block type="core/text_list" name="bottom-right" as="bottom-right" translate="label">
					<label>Bottom Right</label>
				</block>
			</reference>
			<reference name="Bottom-right">
				<block type="core/template" name="bottom-right-block" template="homepage/bottom_right.phtml" />
			</reference>
		<!-- END HOMEPAGE SPECIFICATION -->
			
		<!-- PRODUCT CATALOG -->
			<!-- top left -->
			<reference name="root">
				<block type="core/text_list" name="catalog-top-left" as="catalog-top-left" translate="label">
					<label>Catalog Top Left</label>
				</block>
			</reference>
			<reference name="catalog-top-left">
				<block type="core/template" name="catalog-top-left-block" template="page/html/catalog_top_left.phtml" />
			</reference>
			
			<!-- top right -->
			<reference name="root">
				<block type="core/text_list" name="catalog-top-right" as="catalog-top-right" translate="label">
					<label>Catalog Top Right</label>
				</block>
			</reference>
			<reference name="catalog-top-right">
				<block type="core/template" name="catalog-top-right-block" template="page/html/catalog_top_right.phtml" />
			</reference>
			<remove name="breadcrumbs" />
	</default>
	<catalog_category_default>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left-spiritboutique.phtml</template></action>
        </reference>
	</catalog_category_default>
	<catalog_category_layered>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left-spiritboutique.phtml</template></action>
        </reference>
    </catalog_category_layered>
	<catalog_product_view>
     	<reference name="head">
     		<action method="addItem"><type>skin_css</type><name>css/flexslider.css</name><params/></action>
            <action method="addJs"><script>flexslider/jquery.flexslider-min.js</script></action>
            <remove name="product_tag_list" />
        </reference>
         
        <reference name="content">
			<!-- <block type="core/template" name="moreretailer" template="catalog/product/view/moreretailer.phtml"/>
			<block type="core/template" name="mayalsolike" template="catalog/product/view/mayalsolike.phtml"/> -->
			<block type="reports/product_viewed" name="product.recently.viewed" as="product_recently_viewed" template="reports/product_viewed_slider.phtml"/>
		</reference>
		
		<reference name="product.info.tabs">
        <action method="unsetChild">
            <child>product_additional_data</child>
        </action>
    </reference>
 	</catalog_product_view>
 	<catalogsearch_result_index translate="label">
 		<reference name="head">
			<action method="addItem" ifconfig="quickview/setting/loadjquery"><type>skin_js</type><name>quickview/jquery-1.4.3.min.js</name><params/></action>
			<action method="addItem" ifconfig="quickview/setting/enable"><type>skin_js</type><name>quickview/jquery.mousewheel-3.0.4.pack.js</name><params/></action>
			<action method="addItem" ifconfig="quickview/setting/enable"><type>skin_js</type><name>quickview/quickview.js</name><params/></action>
			<action method="addItem" ifconfig="quickview/setting/enable"><type>skin_js</type><name>quickview/jquery.fancybox-1.3.4.pack.js</name><params/></action>
			<action method="addItem" ifconfig="quickview/setting/enable"><type>skin_css</type><name>quickview/jquery.fancybox-1.3.4.css</name><params/></action>
			<action method="addItem" ifconfig="quickview/setting/enable"><type>skin_css</type><name>quickview/quickview.css</name><params/></action>
			<action method="addItem"><type>skin_js</type><script>js/lib/elevatezoom/jquery.elevateZoom-3.0.8.min.js</script></action>
            <action method="addItem"><type>skin_css</type><name>css/flexslider.css</name><params/></action>
			<action method="addItem"><type>js</type><name>flexslider/jquery.flexslider-min.js</name></action>
			<action method="addItem"><type>js</type><name>custom/popup.js</name></action>
		</reference>
	    <reference name="root">
	        <action method="setTemplate"><template>page/2columns-left-spiritboutique.phtml</template></action>
	    </reference>
	    <reference name="product_list">
			<action method="setTemplate" ifconfig="quickview/setting/enable">
				<template>catalog/product/list.phtml</template>
			</action>
		</reference>
	</catalogsearch_result_index>
</layout>